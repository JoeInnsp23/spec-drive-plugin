{
  "description": "spec-drive hooks for behavior injection and workflow automation",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks-handlers/session-start.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks-handlers/posttool.sh",
            "matcher": "Write|Edit|Delete",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
